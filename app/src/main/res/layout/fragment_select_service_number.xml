<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimaryLight"
                android:orientation="vertical">

    <TextView
        android:id="@+id/service_number_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write_service_number_hint_text"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-thin"
        android:paddingBottom="4dp"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        >
    </TextView>

    <EditText
        android:id="@+id/write_service_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryVeryLight"
        android:padding="8dp"
        android:cursorVisible="true"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/service_number_desc_text"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/white"
        android:textSize="20sp"
        >
    </EditText>

</RelativeLayout>